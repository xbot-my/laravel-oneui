{
    "name": "xbot-my/laravel-oneui",
    "description": "OneUI Blade Component for Laravel.",
    "keywords": [
        "laravel",
        "laravel-package",
        "oneui",
        "blade"
    ],
    "homepage": "https://github.com/xbot-my/laravel-oneui",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Roy",
            "email": "admin@xbot.my",
            "homepage": "https://xbot.my"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/view": "^11.0|^12.0",
        "illuminate/filesystem": "^11.0|^12.0"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-browser": "^4.1",
        "orchestra/testbench": "^9.0|^10.0",
        "laravel/pint": "^1.26",
        "laravel/boost": "*",
        "spatie/laravel-ignition": "^2.9",
        "orchestra/testbench-browser-kit": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "XBot\\OneUI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XBot\\OneUI\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "XBot\\OneUI\\OneUIServiceProvider"
            ],
            "aliases": {
                "OneUI": "XBot\\OneUI\\Facades\\OneUI"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "clean-cache": [
            "@php vendor/bin/testbench package:purge-skeleton --ansi",
            "@php -r \"file_exists('vendor/orchestra/testbench-core/laravel/compiled.php') && @unlink('vendor/orchestra/testbench-core/laravel/compiled.php');\"",
            "@php -r \"file_exists('bootstrap/cache/config.php') && @unlink('bootstrap/cache/config.php');\"",
            "echo 'Done - Please refresh browser'"
        ],
        "publish": [
            "@php artisan vendor:publish --provider='XBot\\\\OneUI\\\\OneUIServiceProvider' --tag=oneui-config --ansi",
            "@php artisan vendor:publish --provider='XBot\\\\OneUI\\\\OneUIServiceProvider' --tag=oneui-views --ansi",
            "@php artisan vendor:publish --provider='XBot\\\\OneUI\\\\OneUIServiceProvider' --tag=oneui-assets --ansi",
            "@php artisan vendor:publish --provider='XBot\\\\OneUI\\\\OneUIServiceProvider' --tag=oneui-examples --ansi",
            "echo 'All OneUI resources published successfully'"
        ],
        "publish-examples": [
            "@php artisan vendor:publish --provider='XBot\\\\OneUI\\\\OneUIServiceProvider' --tag=oneui-examples --force --ansi",
            "echo 'Example routes published'"
        ],
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/pint --ansi",
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ],
        "test": [
            "@clear",
            "@php vendor/bin/pest"
        ],
        "test:browser": [
            "@build",
            "./vendor/bin/pest --testsuite=Browser"
        ]
    }
}
